@using Sistema_Gestion_Inventario.Data
@model IEnumerable<Producto>
@{
    ViewData["Title"] = "Productos";
    var q = ViewData["q"]?.ToString() ?? "";

    var etiquetasPorProducto = ViewBag.EtiquetasPorProducto as IDictionary<int, IEnumerable<dynamic>>;
}
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Productos</h1>
        <a class="btn btn-primary" asp-action="Create"><i class="bi bi-plus-lg me-1"></i> Nuevo Producto</a>
    </div>

    <div class="d-flex justify-content-end mb-3">
        <input id="searchInput" type="text" class="form-control w-25" placeholder="Buscar por nombre, categoría, proveedor o SKU..." value="@q">
    </div>

    <div class="d-flex justify-content-end mb-4">
        <form asp-controller="Productos" asp-action="ExportarPDF" method="post">
            <input type="hidden" name="q" id="searchTermPDF" value="@q" />
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-file-earmark-pdf-fill me-1"></i> Exportar a PDF
            </button>
        </form>

        <a class="btn btn-outline-secondary" asp-controller="Stock" asp-action="Index">
            <i class="bi bi-boxes me-1"></i> Ver stock (SP)
        </a>

    </div>

    <div class="table-responsive">
        <table id="tabla" class="table table-dark table-hover table-bordered rounded shadow">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>SKU</th>
                    <th>Nombre</th>
                    <th>Etiquetas</th>
                    <th>Categoría</th>
                    <th>Proveedor</th>
                    <th>UM</th>
                    <th>Costo</th>
                    <th>Precio</th>
                    <th>Activo</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                    <tr>
                        <td>@p.IdProducto</td>
                        <td>@p.Sku</td>
                        <td>
                            <div class="d-flex align-items-center gap-2">
                                @if (!string.IsNullOrWhiteSpace(p.ImagenPath))
                                {
                                    <img src="@p.ImagenPath"
                                         alt=""
                                         loading="lazy"
                                         style="width:40px;height:40px;object-fit:cover;border-radius:.25rem;border:1px solid rgba(255,255,255,.25);" />
                                }
                                <span>@p.Nombre</span>
                            </div>
                        </td>
                        <td>
                            @{
                                IEnumerable<dynamic>? chips = null;
                                if (etiquetasPorProducto != null && etiquetasPorProducto.ContainsKey(p.IdProducto))
                                {
                                    chips = etiquetasPorProducto[p.IdProducto];
                                }
                            }
                            @if (chips != null && chips.Any())
                            {
                                foreach (var et in chips)
                                {
                                    var nombre = Convert.ToString(et?.Nombre) ?? "-";
                                    var color = Convert.ToString(et?.ColorHex);
                                    var icono = Convert.ToString(et?.IconoCss);

                                    if (!string.IsNullOrWhiteSpace(color))
                                    {
                                        <span class="badge rounded-pill me-1" style="background-color:@color; color:#fff; border:1px solid rgba(0,0,0,.2)">
                                            @if (!string.IsNullOrWhiteSpace(icono))
                                            {
                                                <i class="@icono me-1"></i>
                                            }
                                            @nombre
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary rounded-pill me-1">
                                            @if (!string.IsNullOrWhiteSpace(icono))
                                            {
                                                <i class="@icono me-1"></i>
                                            }
                                            @nombre
                                        </span>
                                    }
                                }
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </td>
                        <td>@(p.IdCategoriaNavigation?.Nombre ?? "-")</td>
                        <td>@(p.IdProveedorPrincipalNavigation?.RazonSocial ?? "-")</td>
                        <td>@p.UnidadMedida</td>
                        <td>@p.CostoStd.ToString("N2")</td>
                        <td>@p.PrecioSugerido.ToString("N2")</td>
                        <td>@(p.Activo ? "Sí" : "No")</td>
                        <td>
                            @if (User.IsInRole("Administrador"))
                            {
                                <a class="btn btn-sm btn-warning me-1" asp-action="Edit" asp-route-id="@p.IdProducto">
                                    <i class="bi bi-pencil-square"></i> Editar
                                </a>
                            }
                            <a class="btn btn-sm btn-info me-1" asp-action="Details" asp-route-id="@p.IdProducto">
                                <i class="bi bi-eye-fill"></i> Detalle
                            </a>
                            @if (User.IsInRole("Administrador"))
                            {
                                <button type="button"
                                        class="btn btn-sm btn-danger btn-eliminar"
                                        data-url="@Url.Action("Delete", new { id = p.IdProducto })"
                                        data-nombre="@p.Nombre">
                                    <i class="bi bi-trash-fill"></i> Borrar
                                </button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="confirmEliminarModal" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content bg-dark text-white">
            <div class="modal-header">
                <h5 class="modal-title" id="modalLabel">Confirmar eliminación</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">¿Eliminar <strong id="modalNombre"></strong>?</div>
            <div class="modal-footer">
                <form id="formEliminar" method="post">
                    @Html.AntiForgeryToken()
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button id="btnConfirmarEliminar" type="button" class="btn btn-danger">Eliminar</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
          $('#tabla').DataTable({
            language: { url: "//cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json" },
            ordering: true,
            paging: true,
            searching: false
          });
        });

        const input = document.getElementById("searchInput");
        input.addEventListener("input", function () {
          const v = this.value.toLowerCase().trim();
          document.getElementById("searchTermPDF").value = v;
          document.querySelectorAll('#tabla tbody tr').forEach(row => {
            const sku = row.cells[1].textContent.toLowerCase();
            const nombre = row.cells[2].textContent.toLowerCase();
            const etiquetas = row.cells[3].textContent.toLowerCase();
            const cat = row.cells[4].textContent.toLowerCase();
            const prov = row.cells[5].textContent.toLowerCase();
            row.style.display = (sku.includes(v) || nombre.includes(v) || etiquetas.includes(v) || cat.includes(v) || prov.includes(v)) ? '' : 'none';
          });
        });

        document.addEventListener('DOMContentLoaded', function () {
          let url = null;
          const modal = new bootstrap.Modal(document.getElementById('confirmEliminarModal'));
          const btn = document.getElementById('btnConfirmarEliminar');
          const nameHolder = document.getElementById('modalNombre');
          const form = document.getElementById('formEliminar');

          document.querySelectorAll('.btn-eliminar').forEach(b=>{
            b.addEventListener('click', function(){
              url = this.dataset.url;
              nameHolder.textContent = this.dataset.nombre || 'este producto';
              modal.show();
            });
          });

          btn.addEventListener('click', function(){
            if(!url) return;
            form.action = url;
            form.submit();
          });
        });
    </script>
    @if (TempData["toastMsg"] != null)
    {
        <script>toastr["@TempData["toastType"] ?? "success"]("@TempData["toastMsg"]");</script>
    }
}