@using Microsoft.AspNetCore.Identity
<!DOCTYPE html>
<html lang="es" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema_Gestion_Inventario</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Sistema_Gestion_Inventario.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <link rel="icon" href="~/favicon.ico" type="image/x-icon" />
    <link rel="icon" href="~/favicon-dark.ico" media="(prefers-color-scheme: dark)" />
    <link rel="icon" href="~/favicon-light.ico" media="(prefers-color-scheme: light)" />
    <link rel="stylesheet" href="https://cdn.datatables.net/2.3.3/css/dataTables.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.14.1/themes/base/jquery-ui.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert2/11.12.4/sweetalert2.min.css" />

    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="app-shell">
    @{
        var hideNav = (ViewData["HideNav"] as bool?) ?? false;
    }
    <header class="border-bottom">
        @if (!hideNav)
        {
            <nav class="navbar navbar-expand-lg app-navbar shadow-sm">
                <div class="container-fluid">
                    <a class="navbar-brand d-flex align-items-center gap-2" asp-area="" asp-controller="Home" asp-action="Index" title="Inicio">
                        <i class="bi bi-boxes brand-icon"></i>
                        <span class="brand-title">Sistema de Gestión de Inventario</span>
                    </a>

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                            aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="mainNav">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index"><i class="bi bi-house-door me-1"></i>Inicio</a></li>

                            @* visible solo para Admin *@
                            @if (User.IsInRole("Administrador"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link nav-admin" asp-area="Admin" asp-controller="UsuariosAdmin" asp-action="Index">
                                        <i class="bi bi-people-fill me-1"></i>Usuarios / Roles
                                    </a>
                                </li>
                            }
                        </ul>

                        <div class="d-flex align-items-center gap-2">
                            @if (User?.Identity?.IsAuthenticated ?? false)
                            {
                                <span class="navbar-text me-2 small"><i class="bi bi-person-circle me-1"></i>@User.Identity!.Name</span>
                                <form class="d-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home")" method="post">
                                    <button type="submit" class="btn btn-sm btn-outline-light-subtle"><i class="bi bi-box-arrow-right me-1"></i>Salir</button>
                                </form>
                            }
                            else
                            {
                                <a class="btn btn-outline-primary" asp-controller="Cuenta" asp-action="Index">
                                    <i class="bi bi-door-open-fill me-1"></i> Login / Registro
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </nav>
        }
    </header>

    <div class="container flex-grow-1 my-4">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="app-footer mt-auto">
        <div class="container py-3 small d-flex justify-content-between align-items-center">
            <span>© @DateTime.Now.Year - Sistema_Gestion_Inventario</span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.14.1/jquery-ui.min.js"></script>
    <script src="https://cdn.datatables.net/2.3.3/js/dataTables.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.serializeJSON/3.2.1/jquery.serializejson.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert2/11.12.4/sweetalert2.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        (function () {
            const root = document.documentElement;
            const btn = document.getElementById('btnTheme');
            const icon = document.getElementById('themeIcon');
            const saved = localStorage.getItem('sgi-theme');
            if (saved === 'dark') {
                root.setAttribute('data-theme', 'dark');
                icon.classList.remove('bi-moon-stars-fill');
                icon.classList.add('bi-sun-fill');
            }

            btn?.addEventListener('click', () => {
                const dark = root.getAttribute('data-theme') === 'dark';
                root.setAttribute('data-theme', dark ? 'light' : 'dark');
                localStorage.setItem('sgi-theme', dark ? 'light' : 'dark');
                icon.classList.toggle('bi-sun-fill', !dark);
                icon.classList.toggle('bi-moon-stars-fill', dark);
            });
        })();
    </script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
          const w = document.createTreeWalker(document.body, NodeFilter.SHOW_TEXT);
          const nodes = [];
          while (w.nextNode()) nodes.push(w.currentNode);

          for (const n of nodes) {
            n.nodeValue = n.nodeValue
              .replace(/\u2013|\u2014|\u2212/g, '-')
              .replace(/\u00A0/g, ' ')
              .replace(/\u201C|\u201D/g, '"')
              .replace(/\u2018|\u2019/g, "'")
            ;
          }
        });
    </script>


    @await RenderSectionAsync("Scripts", required: false)
    @await Html.PartialAsync("_Select2Init")
</body>
</html>