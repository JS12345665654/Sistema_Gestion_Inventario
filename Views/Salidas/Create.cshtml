@model Sistema_Gestion_Inventario.Controllers.SalidasController.SalidaVM
@{
    ViewData["Title"] = "Salida de inventario";
    Layout = "_Layout";
}

<div class="container mt-5">
    <h2 class="fw-bold mb-3"><i class="bi bi-box-arrow-up me-2"></i>Salida de inventario</h2>

    <div class="card shadow">
        <div class="card-body bg-light">
            <form asp-action="Crear" method="post">
                @Html.AntiForgeryToken()

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="IdProducto" class="form-label fw-bold">Producto</label>
                        <select asp-for="IdProducto" class="form-select" asp-items="@(ViewBag.Productos)">
                            <option value="">Seleccione...</option>
                        </select>
                        <span asp-validation-for="IdProducto" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="IdAlmacen" class="form-label fw-bold">Almacén</label>
                        <select asp-for="IdAlmacen" class="form-select" asp-items="@(ViewBag.Almacenes)">
                            <option value="">Seleccione...</option>
                        </select>
                        <span asp-validation-for="IdAlmacen" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Cantidad" class="form-label fw-bold">Cantidad</label>
                        <input asp-for="Cantidad" class="form-control" type="number" step="0.01" min="0" />
                        <span asp-validation-for="Cantidad" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Motivo" class="form-label fw-bold">Motivo</label>
                        <select asp-for="Motivo" class="form-select" asp-items="@(ViewBag.Motivos)"></select>
                        <span asp-validation-for="Motivo" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Referencia" class="form-label fw-bold">Referencia (opcional)</label>
                        <input asp-for="Referencia" class="form-control" />
                    </div>

                    <div class="col-12">
                        <label asp-for="Observaciones" class="form-label fw-bold">Observaciones</label>
                        <textarea asp-for="Observaciones" class="form-control" rows="2"></textarea>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-controller="Stock" asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Volver
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-check2-circle me-1"></i> Registrar salida
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}