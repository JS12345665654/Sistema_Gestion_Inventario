@using Sistema_Gestion_Inventario.Data
@model Categoria
@{
    ViewData["Title"] = "Detalle de Categoría";
    Layout = "_Layout";
}

<div class="container mt-5">
    <h2 class="text-dark fw-bold mb-4">
        <i class="bi bi-info-circle me-2"></i>Detalle de categoría
    </h2>

    <div class="card shadow">
        <div class="card-body bg-light">
            <dl class="row mb-0">
                <dt class="col-sm-3 fw-bold">ID</dt>
                <dd class="col-sm-9">@Model.IdCategoria</dd>

                <dt class="col-sm-3 fw-bold">Nombre</dt>
                <dd class="col-sm-9">@Model.Nombre</dd>

                <dt class="col-sm-3 fw-bold">Descripción</dt>
                <dd class="col-sm-9">@Model.Descripcion ?? "-"</dd>

                <dt class="col-sm-3 fw-bold">Activo</dt>
                <dd class="col-sm-9">@(Model.Activo ? "Sí" : "No")</dd>
            </dl>
        </div>
    </div>

    <div class="mt-4 d-flex justify-content-between">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Volver
        </a>

        @if(User.IsInRole("Administrador"))
        {
            <a class="btn btn-primary"
               asp-controller="Categorias"
               asp-action="Edit"
               asp-route-id="@Model.IdCategoria">
                <i class="bi bi-pencil-square me-1"></i> Editar
            </a>
        }
    </div>
</div>