@using Sistema_Gestion_Inventario.Data
@model IEnumerable<MovimientoInventario>
@{
    ViewData["Title"] = "Movimientos";
    var desde = ViewData["desde"]?.ToString();
    var hasta = ViewData["hasta"]?.ToString();
}
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Movimientos de Inventario</h1>
        @if (User.IsInRole("Administrador"))
        {
            <a class="btn btn-primary" asp-action="Create"><i class="bi bi-plus-lg me-1"></i> Nuevo Movimiento</a>
        }
    </div>

    <form method="get" class="row g-2 mb-3">
        <div class="col-auto">
            <label class="form-label">Desde</label>
            <input type="date" name="desde" value="@desde" class="form-control" />
        </div>
        <div class="col-auto">
            <label class="form-label">Hasta</label>
            <input type="date" name="hasta" value="@hasta" class="form-control" />
        </div>
        <div class="col-auto align-self-end">
            <button class="btn btn-primary" type="submit"><i class="bi bi-funnel me-1"></i> Filtrar</button>
        </div>
        <div class="col-auto align-self-end">
            <a class="btn btn-outline-secondary" href="@Url.Action("Index")">Limpiar</a>
        </div>
    </form>

    <div class="d-flex justify-content-end mb-4">
        <form asp-action="ExportarExcel" method="post">
            <input type="hidden" name="desde" value="@desde" />
            <input type="hidden" name="hasta" value="@hasta" />
            <button type="submit" class="btn btn-success">
                <i class="bi bi-file-earmark-excel-fill me-1"></i> Exportar a Excel
            </button>
        </form>
    </div>

    <div class="table-responsive">
        <table id="tabla" class="table table-dark table-hover table-bordered rounded shadow">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Producto</th>
                    <th>Almacén</th>
                    <th>Tipo</th>
                    <th>Motivo</th>
                    <th>Cantidad</th>
                    <th>Costo Unit.</th>
                    <th>Fecha</th>
                    <th>Referencia</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var m in Model)
                {
                    <tr>
                        <td>@m.IdMovimiento</td>
                        <td>@(m.IdProductoNavigation?.Nombre ?? "-")</td>
                        <td>@(m.IdAlmacenNavigation?.Codigo ?? "-")</td>
                        <td>@m.Tipo</td>
                        <td>@m.Motivo</td>
                        <td>@m.Cantidad.ToString("N2")</td>
                        <td>@((m.CostoUnitario ?? 0).ToString("N2"))</td>
                        <td>@m.FechaMovimiento.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@m.Referencia</td>
                        <td>
                            @if (User.IsInRole("Administrador"))
                            {
                                <a class="btn btn-sm btn-warning me-1" asp-action="Edit" asp-route-id="@m.IdMovimiento">
                                    <i class="bi bi-pencil-square"></i> Editar
                                </a>
                            }
                            <a class="btn btn-sm btn-info me-1" asp-action="Details" asp-route-id="@m.IdMovimiento">
                                <i class="bi bi-eye-fill"></i> Detalle
                            </a>
                            @if (User.IsInRole("Administrador"))
                            {
                                <button type="button" class="btn btn-sm btn-danger btn-eliminar"
                                        data-url="@Url.Action("Delete", new { id = m.IdMovimiento })"
                                        data-nombre="@m.Referencia">
                                    <i class="bi bi-trash-fill"></i> Borrar
                                </button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="confirmEliminarModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content bg-dark text-white">
            <div class="modal-header">
                <h5 class="modal-title">Confirmar eliminación</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">¿Eliminar <strong id="modalNombre"></strong>?</div>
            <div class="modal-footer">
                <form id="formEliminar" method="post">
                    @Html.AntiForgeryToken()
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button id="btnConfirmarEliminar" type="button" class="btn btn-danger">Eliminar</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function(){
          $('#tabla').DataTable({
            language: {url: "//cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json"},
            ordering: true,
            paging: true,
            searching: false,
            order: [[7, 'desc']], 
            pageLength: 15
          });
        });
          document.addEventListener('DOMContentLoaded',()=>{
          let url=null;const modal=new bootstrap.Modal(document.getElementById('confirmEliminarModal'));
          const btn=document.getElementById('btnConfirmarEliminar');const nameHolder=document.getElementById('modalNombre');
          const form=document.getElementById('formEliminar');
          document.querySelectorAll('.btn-eliminar').forEach(b=>{
            b.addEventListener('click',function(){url=this.dataset.url;nameHolder.textContent=this.dataset.nombre||'este movimiento';modal.show();});
          });
          btn.addEventListener('click',()=>{if(!url)return;form.action=url;form.submit();});
        });
    </script>
    @if (TempData["toastMsg"] != null)
    {
        <script>toastr["@TempData["toastType"] ?? "success"]("@TempData["toastMsg"]");</script>
    }
}