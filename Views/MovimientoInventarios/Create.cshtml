@using Sistema_Gestion_Inventario.Data
@model MovimientoInventario
@{
    ViewData["Title"] = "Crear Movimiento";
    Layout = "_Layout";
}

<div class="container mt-5">
    <h2 class="text-dark fw-bold mb-4">
        <i class="bi bi-box-arrow-in-down-right me-2"></i>Crear movimiento de inventario
    </h2>

    <div class="card shadow">
        <div class="card-body bg-light">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="row g-3">
                    <div class="col-md-5">
                        <label asp-for="IdProducto" class="form-label fw-bold">Producto</label>
                        <select asp-for="IdProducto" class="form-select"
                                asp-items="@(ViewData["IdProducto"] as Microsoft.AspNetCore.Mvc.Rendering.SelectList)">
                            <option value="">-- Seleccionar producto --</option>
                        </select>
                        <span asp-validation-for="IdProducto" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="IdAlmacen" class="form-label fw-bold">Almacén</label>
                        <select asp-for="IdAlmacen" class="form-select"
                                asp-items="@(ViewData["IdAlmacen"] as Microsoft.AspNetCore.Mvc.Rendering.SelectList)">
                            <option value="">-- Seleccionar almacén --</option>
                        </select>
                        <span asp-validation-for="IdAlmacen" class="text-danger"></span>
                    </div>

                    <div class="col-md-3">
                        <label asp-for="Tipo" class="form-label fw-bold">Tipo</label>
                        <select asp-for="Tipo" class="form-select">
                            <option value="IN">Entrada (IN)</option>
                            <option value="OUT">Salida (OUT)</option>
                        </select>
                        <span asp-validation-for="Tipo" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Motivo" class="form-label fw-bold">Motivo</label>
                        <select asp-for="Motivo" class="form-select">
                            <option value="1">Compra</option>
                            <option value="2">Venta</option>
                            <option value="3">Traspaso (Entrada)</option>
                            <option value="4">Traspaso (Salida)</option>
                            <option value="5">Ajuste Positivo</option>
                            <option value="6">Ajuste Negativo</option>
                            <option value="7">Devolución a Proveedor</option>
                            <option value="8">Devolución de Cliente</option>
                        </select>
                        <span asp-validation-for="Motivo" class="text-danger"></span>
                        <small class="text-muted">Si el motivo es <strong>Compra</strong>, se recomienda asociar OC Detalle.</small>
                    </div>

                    <div class="col-md-3">
                        <label asp-for="Cantidad" class="form-label fw-bold">Cantidad</label>
                        <input asp-for="Cantidad" class="form-control" />
                        <span asp-validation-for="Cantidad" class="text-danger"></span>
                    </div>

                    <div class="col-md-3">
                        <label asp-for="CostoUnitario" class="form-label fw-bold">Costo unitario</label>
                        <input asp-for="CostoUnitario" class="form-control" />
                        <span asp-validation-for="CostoUnitario" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="IdOrdenCompraDetalle" class="form-label fw-bold">
                            OC Detalle <small class="text-muted">(requerido si Motivo = Compra)</small>
                        </label>
                        <select asp-for="IdOrdenCompraDetalle" class="form-select"
                                asp-items="@(ViewData["IdOrdenCompraDetalle"] as Microsoft.AspNetCore.Mvc.Rendering.SelectList)">
                            <option value="">-- Sin vincular --</option>
                        </select>
                        <span asp-validation-for="IdOrdenCompraDetalle" class="text-danger"></span>
                    </div>

                    <div class="col-md-3">
                        <label asp-for="FechaMovimiento" class="form-label fw-bold">Fecha movimiento</label>
                        <input asp-for="FechaMovimiento" type="datetime-local" class="form-control" />
                        <span asp-validation-for="FechaMovimiento" class="text-danger"></span>
                        <small class="text-muted">Si lo dejás vacío, la BD asigna la fecha/hora.</small>
                    </div>

                    <div class="col-md-3">
                        <label asp-for="Referencia" class="form-label fw-bold">Referencia</label>
                        <input asp-for="Referencia" class="form-control" />
                        <span asp-validation-for="Referencia" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="IdUsuarioOperador" class="form-label fw-bold">Usuario operador (Id)</label>
                        <input asp-for="IdUsuarioOperador" class="form-control" />
                        <span asp-validation-for="IdUsuarioOperador" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Observaciones" class="form-label fw-bold">Observaciones</label>
                        <input asp-for="Observaciones" class="form-control" />
                        <span asp-validation-for="Observaciones" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Volver</a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check2-circle me-1"></i> Crear movimiento
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script>
        // Compra (1), forzar Tipo = IN y requerir OC Detalle
        (function () {
            function byIdOrName(key) {
                return document.getElementById(key) || document.querySelector('[name="' + key + '"]');
            }
            const motivo = byIdOrName('Motivo');
            const tipo = byIdOrName('Tipo');
            const ocDet = byIdOrName('IdOrdenCompraDetalle');

            function syncRules() {
                if (!motivo || !tipo || !ocDet) return;
                const isCompra = motivo.value === '1';
                if (isCompra) {
                    if (tipo.value !== 'IN') tipo.value = 'IN';
                    ocDet.setAttribute('required', 'required');
                } else {
                    ocDet.removeAttribute('required');
                }
            }

            motivo?.addEventListener('change', syncRules);
            tipo?.addEventListener('change', syncRules);
            document.addEventListener('DOMContentLoaded', syncRules);
            syncRules();
        })();
    </script>
}