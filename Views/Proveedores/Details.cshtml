@using Sistema_Gestion_Inventario.Data
@model Proveedor
@{
    ViewData["Title"] = "Detalle de Proveedor";
    Layout = "_Layout";
}

<div class="container mt-5">
    <h2 class="text-dark fw-bold mb-4">
        <i class="bi bi-info-circle me-2"></i>Detalle de proveedor
    </h2>

    <div class="card shadow">
        <div class="card-body bg-light">
            <dl class="row mb-0">
                <dt class="col-sm-3 fw-bold">ID</dt>
                <dd class="col-sm-9">@Model.IdProveedor</dd>

                <dt class="col-sm-3 fw-bold">Razón Social</dt>
                <dd class="col-sm-9">@Model.RazonSocial</dd>

                <dt class="col-sm-3 fw-bold">CUIT</dt>
                <dd class="col-sm-9">@Model.Cuit</dd>

                <dt class="col-sm-3 fw-bold">Email</dt>
                <dd class="col-sm-9">@Model.Email ?? "-"</dd>

                <dt class="col-sm-3 fw-bold">Teléfono</dt>
                <dd class="col-sm-9">@Model.Telefono ?? "-"</dd>

                <dt class="col-sm-3 fw-bold">Dirección</dt>
                <dd class="col-sm-9">@Model.Direccion ?? "-"</dd>

                <dt class="col-sm-3 fw-bold">Ciudad</dt>
                <dd class="col-sm-9">@Model.Ciudad ?? "-"</dd>

                <dt class="col-sm-3 fw-bold">Provincia</dt>
                <dd class="col-sm-9">@Model.Provincia ?? "-"</dd>

                <dt class="col-sm-3 fw-bold">Código Postal</dt>
                <dd class="col-sm-9">@Model.Cp ?? "-"</dd>

                <dt class="col-sm-3 fw-bold">Días que tarda en la entrega</dt>
                <dd class="col-sm-9">@Model.LeadTimeDias</dd>

                <dt class="col-sm-3 fw-bold">Activo</dt>
                <dd class="col-sm-9">@(Model.Activo ? "Sí" : "No")</dd>
            </dl>
        </div>
    </div>

    <div class="mt-4 d-flex justify-content-between">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Volver
        </a>
        @if (User.IsInRole("Administrador"))
        {
            <a asp-action="Edit" asp-route-id="@Model.IdProveedor" class="btn btn-primary">
                <i class="bi bi-pencil-square me-1"></i> Editar
            </a>
        }
    </div>
</div>