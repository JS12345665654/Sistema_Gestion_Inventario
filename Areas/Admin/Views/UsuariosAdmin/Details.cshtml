@model Sistema_Gestion_Inventario.Areas.Admin.Controllers.UsuariosAdminController.UserEditVM
@{
    ViewData["Title"] = "Detalle de usuario";
    Layout = "_Layout";
}
<div class="container mt-4">
    <h2 class="fw-bold"><i class="bi bi-person-badge me-2"></i>Detalle de usuario</h2>

    <div class="card shadow mt-3">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Nombre</dt>
                <dd class="col-sm-9">@Model.Nombre</dd>

                <dt class="col-sm-3">Apellido</dt>
                <dd class="col-sm-9">@Model.Apellido</dd>

                <dt class="col-sm-3">Roles</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-@(Model.IsAdmin ? "success" : "secondary")">Administrador: @(Model.IsAdmin ? "Sí" : "No")</span>
                    <span class="badge bg-@(Model.IsUsuario ? "success" : "secondary") ms-2">Usuario: @(Model.IsUsuario ? "Sí" : "No")</span>
                </dd>
            </dl>
        </div>
    </div>

    <div class="mt-3 d-flex gap-2">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Volver
        </a>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
            <i class="bi bi-pencil-square"></i> Editar
        </a>
    </div>
</div>